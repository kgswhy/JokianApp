<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Detail Laporan"
        android:textColor="@color/header"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/satis"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:background="@drawable/rounded_corner"
                android:id="@+id/imageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Nama Pelapor :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelPelapor"/>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelPelapor"
                android:id="@+id/cardUsername">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Nabeel Muhammad "
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/usernameTextView"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/cardUsername"
                android:text="Keterangan :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelDesc"/>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="65dp"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelDesc"
                android:id="@+id/cardDesc">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Jalan Rusak Betul"
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/descTextView"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                android:text="Tingkat Kerusakan :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelKerusakan"/>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelKerusakan"
                android:id="@+id/cardKerusakan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Rendah"
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/kerusakanTextView"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintStart_toEndOf="@id/imageView"
                android:text="Location :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelLocation"/>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelLocation"
                android:id="@+id/cardLocation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Jakarta Barat"
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/locationTextView"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardLocation"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Status Penanganan :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelStatus"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelStatus"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dropdown_label"
                    android:inputType="none"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="11sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout"
                android:padding="10dp"
                android:text="Tanggapi Laporan"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/button"
                android:fontFamily="@font/montserrat_medium"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
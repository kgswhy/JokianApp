<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".Users.EditLaporan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Edit Laporan"
        android:textColor="@color/primary"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_margin="20dp"
                android:src="@drawable/no_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:background="@drawable/rounded_corner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Name of The Report :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelPelapor"/>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelPelapor"
                android:id="@+id/cardUsername">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/imageView"
                    app:layout_constraintTop_toBottomOf="@id/labelPelapor"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/usernameTextView"
                    android:maxLines="1"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/cardUsername"
                android:text="Description :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelDesc"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelDesc"
                android:id="@+id/textInputLayout1"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/descET"
                    android:maxLines="3"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:scrollHorizontally="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                app:layout_constraintEnd_toStartOf="@id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                android:text="Damage Level :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelKerusakan"/>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelKerusakan"
                android:id="@+id/cardKerusakan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="15dp"
                    android:textColor="@color/header"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/kerusakanTextView"
                    android:maxLines="1"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintStart_toEndOf="@id/imageView"
                android:text="Location :"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:id="@+id/labelLocation"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/labelLocation"
                android:id="@+id/textInputLayout2"
                android:hint="lokasi"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/locationET"
                    android:maxLines="1"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/deleteBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout2"
                android:padding="10dp"
                android:text="Save Changes"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/button"
                android:fontFamily="@font/montserrat_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout2"
                android:padding="10dp"
                android:text="Delete the Report"
                android:background="@drawable/dialog_button"
                android:backgroundTint="@color/disabled"
                android:fontFamily="@font/montserrat_medium"
                style=""/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>